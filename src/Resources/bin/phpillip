#!/usr/bin/env php
<?php

set_time_limit(0);

function tryRequireOnce($file)
{
    foreach ([__DIR__.'/../../../../../../', __DIR__.'/../../', __DIR__.'/../'] as $path) {
        if (file_exists($path . $file)) {
            return require_once $path . $file;
        }
    }

    die(sprintf('File not found "%s"', $file));
}

tryRequireOnce('vendor/autoload.php');
tryRequireOnce('src/Kernel.php');

use Symfony\Component\Console\Input\ArgvInput;
use Symfony\Component\Debug\Debug;
use Phpillip\Console\Application;

$input = new ArgvInput();
$env   = $input->getParameterOption(['--env', '-e'], getenv('APP_ENV') ?: 'dev');

if ($debug = getenv('APP_DEBUG') !== '0' && !$input->hasParameterOption(['--no-debug', '']) && $env !== 'prod') {
    Debug::enable();
}

$kernel = new Kernel($env, $debug);
$application = new Application($kernel);
$application->run($input);
